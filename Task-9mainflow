def is_prime(n):
# Step1:Checking for numbers less than or equal to 1 (not prime)
    if n <= 1:
      return False
    #Step2:Checking divisibility from 2 to sqrt(n)
    for i in range(2,int(n**0.5)+1):
        if n % i == 0:  # Found a divisor
            return False
    # Step3:If no divisors found, it's prime
    return True
# Example usage
print(is_prime(2))    
print(is_prime(15))    
print(is_prime(17))   
print(is_prime(1))    