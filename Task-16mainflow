def count_vowels_consonants(s):
    vowels = set("aeiouAEIOU")
#Define a set of vowels for quick checking. Convert to lowercase for case-insensitivity.
    v = c = 0
#Loop through each character in the string
    for ch in s:
        if ch.isalpha():
            if ch in vowels:
                v += 1
            else:
                c += 1
    return v, c
#Example
print(count_vowels_consonants("Hello World"))  # Output: (3, 7)
